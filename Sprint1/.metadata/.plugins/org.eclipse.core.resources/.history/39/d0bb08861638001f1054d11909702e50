package exemplo;

public class Main {

	public static void main(String[] args) {
		/*
		 * Array original: 10 20 30 40 50
		 * 
		 * Array invertido: 50 40 30 20 10
		 * 
		 * Maior valor: 50 Menor valor: 10 Soma dos elementos: 150
		 */
		System.out.println("Digite a quantidade de elementos no array:");
        int n = sc.nextInt();

        // Cria um array para armazenar os elementos
        int[] array = new int[n];
		System.out.println("O programa então exibirá o array original, o array invertido, o maior e menor valor, e a soma dos elementos.");
		// Realiza algumas manipulações no array
        // 1. Inverte o array
        int[] arrayInvertido = new int[n];
        for (int i = 0; i < n; i++) {
            arrayInvertido[i] = array[n - 1 - i];
        }

        // 2. Encontra o maior e o menor valor no array
        int maior = array[0];
        int menor = array[0];
        for (int i = 1; i < n; i++) {
            if (array[i] > maior) {
                maior = array[i];
            }
            if (array[i] < menor) {
                menor = array[i];
            }
        }

        // 3. Calcula a soma de todos os elementos do array
        int soma = 0;
        for (int i = 0; i < n; i++) {
            soma += array[i];
        }

        // Exibe o array invertido
        System.out.println("\n\nArray invertido:");
        for (int i = 0; i < n; i++) {
            System.out.print(arrayInvertido[i] + " ");
        }

        // Exibe o maior e o menor valor
        System.out.printf("\n\nMaior valor: %d", maior);
        System.out.printf("\nMenor valor: %d", menor);

        // Exibe a soma dos elementos
        System.out.printf("\n\nSoma dos elementos: %d", soma);

	}

}
