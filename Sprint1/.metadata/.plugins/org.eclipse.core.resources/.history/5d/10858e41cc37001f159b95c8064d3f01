package application;

import java.util.Scanner;

public class Main {
	private static final int VALOR_MAXIMO_BYTE = 127;

	public static void main(String[] args) {
		Scanner scn = new Scanner(System.in);
		Scanner scString = new Scanner(System.in);
		System.out.println("=-".repeat(10) + "Jogo de adivinhar o maior numero para a variavel" + "-=".repeat(10));

		do {
			System.out.println("\n" + " ".repeat(10)
					+ "Digite o numero correspondente para adivinhar o valor maximo da variavel: ");

			System.out.println("[1] byte");
			System.out.println("[2] short");
			System.out.println("[3] int");
			System.out.println("[4] long");
			System.out.println("[5] float");
			System.out.println("[6] double");

			int opcao = scn.nextInt();

			if (opcao > 0 && opcao < 7) {
				switch (opcao) {

				case 1: {

					Scanner sc = new Scanner(System.in);
					int tentativas = 0;

					System.out.println("Voce tera 3 tentativas para acertar! \n");
					do {
						System.out.printf("%dª tentativa\n", tentativas + 1);
						System.out
								.println("Digite um valor maximo que voce acha que a variavel do tipo byte suporta: ");
						String num = sc.next();
						tentativas++;
						if (Integer.parseInt(num) == VALOR_MAXIMO_BYTE) {
							System.out.println("Acertou!\n");
							break;
						} else {
							if (Integer.parseInt(num) > VALOR_MAXIMO_BYTE) {
								System.out.println("valor é maior que o maximo.\n");

							} else {
								System.out.println("valor é menor que o maximo.\n");
							}
						}

					} while (tentativas < 3);
					String palavraTentativa = tentativas > 0 ? "tentativas" : "tentativa";

					if (tentativas < 3) {
						System.out.printf("Parabens voce acertou com %d %s.", tentativas, palavraTentativa);
					} else {
						System.out.printf("Voce nao conseguiu acertar!");
					}

				}

				case 2: {

				}

				case 3: {

				}

				case 4: {

				}

				case 5: {

				}

				case 6: {

				}

				}

			} else {
				System.out.println("Opcao invalida");
			}

		} while (true);
	}

}
