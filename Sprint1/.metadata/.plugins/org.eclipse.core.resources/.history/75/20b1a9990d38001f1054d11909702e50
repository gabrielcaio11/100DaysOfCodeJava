package application;

public class While {

	public static void main(String[] args) {
		int contador = 1;

        while (contador <= 5) {
            System.out.println("Contador: " + contador);
            contador++;
        }
        
        contador = 1;
        while(true) {
        	if(contador <= 5) {
        		System.out.println("Contador: " + contador);
                contador++;
        	}else {
        		break;
        	}
        }

	}

}
