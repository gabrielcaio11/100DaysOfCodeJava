package application;

import java.util.Scanner;

public class teste {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int tentativas = 0;
		System.out.println("Voce tera 3 tentativas para acertar! \n");
		do {
			System.out.printf("%d° tentativa\n",tentativas+1);
			System.out.println("Digite um valor maximo que voce acha que a variavel do tipo byte suporta: ");
			String num = sc.next();
			tentativas++;
			if (Integer.parseInt(num) == 127) {
				System.out.println("Acertou!\n");
				break;
			} else {
				if (Integer.parseInt(num) > 127) {
					System.out.println("valor é maior que o maximo\n");
					
				} else {
					System.out.println("valor é menor que o maximo\n");
				}
			}
			
		} while (tentativas < 3);
		String palavraTentativa = tentativas>0 ? "tentativas":"tentativa";
		
		if(tentativas<3) {
			System.out.printf("Parabens voce acertou com %d %s",tentativas,palavraTentativa);
		}else {
			System.out.printf("Voce nao consegui acertar!");
		}
		
		

	}

}
