package exemplo;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Digite o dia:");
        int dia = sc.nextInt();

        System.out.println("Digite o mês:");
        int mes = sc.nextInt();

        System.out.println("Digite o ano:");
        int ano = sc.nextInt();

        String estacao = getEstacao(dia, mes);
        System.out.printf("A data %d/%d/%d corresponde à estação: %s.%n", dia, mes, ano, estacao);

        sc.close();
    }

    public static String getEstacao(int dia, int mes) {
        switch (mes) {
            case 1: case 2:
                return "Verão";
            case 3:
                return (dia < 21) ? "Verão" : "Outono";
            case 4: case 5:
                return "Outono";
            case 6:
                return (dia < 21) ? "Outono" : "Inverno";
            case 7: case 8:
                return "Inverno";
            case 9:
                return (dia < 23) ? "Inverno" : "Primavera";
            case 10: case 11:
                return "Primavera";
            case 12:
                return (dia < 22) ? "Primavera" : "Verão";
            default:
                return "Mês inválido";
        }
    }
}
