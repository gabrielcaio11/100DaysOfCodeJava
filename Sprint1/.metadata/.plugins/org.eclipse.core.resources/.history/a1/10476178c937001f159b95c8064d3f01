package application;

import java.util.Scanner;

public class teste {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int tentativas = 0;
		do {
			
			System.out.println("digite um valor maximo que voce acha que a variavel do tipo byte suporta: ");
			String num = sc.next();
			tentativas++;
			if (Integer.parseInt(num) == 127) {
				System.out.println("Acertou!");
				break;
			} else {
				if (Integer.parseInt(num) > 127) {
					System.out.println("valor é maior que o maximo");
					
				} else {
					System.out.println("valor é menor que o maximo");
				}
			}
			
		} while (true);

	}

}
