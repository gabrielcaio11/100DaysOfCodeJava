package application;

import java.util.Scanner;

public class teste {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		do {
			int tentativas = 0;
			System.out.println("digite um valor que voce acha que a variavel do tipo byte suporta: ");
			String num = sc.next();
			if (Integer.parseInt(num) == 127) {
				System.out.println("Acertou!");
			} else {
				if (Integer.parseInt(num) > 127) {
					System.out.println("valor é maior que o maximo");
					
				} else {
					System.out.println("valor é maior que o maximo");
				}
			}
			tentativas++;
		} while (true);

	}

}
