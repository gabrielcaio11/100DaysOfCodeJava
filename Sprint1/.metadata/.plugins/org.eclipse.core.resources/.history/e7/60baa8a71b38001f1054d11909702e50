package application;

public class Pessoa {
    // Atributos
    private String nome;
    private int idade;
    private double altura;

    // Construtor
    public Pessoa(String nome, int idade, double altura) {
        this.nome = nome;
        this.idade = idade;
        this.altura = altura;
    }

    // Métodos
    public void apresentar() {
        System.out.printf("Olá, meu nome é %s, tenho %d anos e %.2f metros de altura.%n", nome, idade, altura);
    }
}

